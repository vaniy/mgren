<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" type="text/css" href="/css/myDistributor.css">
    <link rel="stylesheet" type="text/css" href="/css/common.css">
    <title>个人中心</title>
</head>

<body>
    <div class="wx_container">
        <div class="section">
            <div class="left">
                <img class="icon" src="/images/iconshop.png" alt="" />
                <span class="userName paddingLeft">我的分销商</span>
            </div>
            <a href="/myOrder" class="right">
                <img class="rightArrow" src="/images/arrowdown.png" alt="" />
            </a>
        </div>
        <div class="tab fontSize10">
            <span id="first" class="btn active">一级（<%=data.firstLevel.length%>）</span>
            <span id="second" class="btn">二级（<%=data.secondLevel.length%>）</span>
            <span id="third" class="btn">三级（<%=data.thirdLevel.length%>）</span>
        </div>
        <% if(data.firstLevel.length>0){%>
            <div class="persons first">
                <% data.firstLevel.forEach(function(item){%>
                    <div class="person">
                        <div class="avator">
                            <img alt="" src=<%=item.avator%> />
                            <span><%=item.name%></span>
                        </div>
                        <div class="info fontSize14">
                            <span class="fontBolder">姓名：<span><%=item.name%></span></span>
                            <span class="fontBolder">城市：<span class="fontNormal"><%=item.city%></span></span>
                            <span class="fontBolder">上级：<span class="fontNormal"><%=item.preName%></span></span>
                            <span class="fontBolder">日期：<span class="fontNormal"><%=item.createTime%></span></span>
                        </div>
                    </div>
                    <%})%>
            </div>
            <%}%>
                <% if(data.secondLevel.length>0){%>
                    <div class="persons second" style="display:none">
                        <% data.secondLevel.forEach(function(item){%>
                            <div class="person">
                                <div class="avator">
                                    <img alt="" src=<%=item.avator%> />
                                    <span><%=item.name%></span>
                                </div>
                                <div class="info fontSize14">
                                    <span class="fontBolder">姓名：<span><%=item.name%></span></span>
                                    <span class="fontBolder">城市：<span class="fontNormal"><%=item.city%></span></span>
                                    <span class="fontBolder">上级：<span class="fontNormal"><%=item.preName%></span></span>
                                    <span class="fontBolder">日期：<span class="fontNormal"><%=item.createTime%></span></span>
                                </div>
                            </div>
                            <%})%>
                    </div>
                    <%}%>
                        <% if(data.thirdLevel.length>0){%>
                            <div class="persons third" style="display:none">
                                <% data.thirdLevel.forEach(function(item){%>
                                    <div class="person">
                                        <div class="avator">
                                            <img alt="" src=<%=item.avator%> />
                                            <span><%=item.name%></span>
                                        </div>
                                        <div class="info fontSize14">
                                            <span class="fontBolder">姓名：<span><%=item.name%></span></span>
                                            <span class="fontBolder">城市：<span class="fontNormal"><%=item.city%></span></span>
                                            <span class="fontBolder">上级：<span class="fontNormal"><%=item.preName%></span></span>
                                            <span class="fontBolder">日期：<span class="fontNormal"><%=item.createTime%></span></span>
                                        </div>
                                    </div>
                                    <%})%>
                            </div>
                            <%}%>
    </div>
    <script src="/javascripts/jquery-3.0.0.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.btn').on('click', function(e) {
                var element = e.currentTarget;
                $('.btn')[0].className = "btn";
                $('.btn')[1].className = "btn";
                $('.btn')[2].className = "btn";
                element.className = "btn active";
                $('.first').hide();
                $('.second').hide();
                $('.third').hide();
                $('.' + element.id).show();
            })
        });
    </script>
</body>

</html>