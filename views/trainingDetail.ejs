<script type="text/javascript">
    //右侧悬浮
    $(document).ready(function () {
        $('.submit').click(function (e) {
            e.preventDefault();
            $.ajax({
                url: '/api/submitTraining',
                type: 'POST',
                data: {
                    ttid: $('.ttid').val(),
                    companyName: $('.companyName').val(),
                    position: $('.position').val(),
                    name: $('.name').val(),
                    phone: $('.phone').val(),
                    email: $('.email').val(),
                    address: $('.address').val(),
                    feedBack: $('.feedBack').val(),
                },
                async: false,
                cache: false,
                success: function (data) {
                    console.log(data);
                    if (data && data.status && data.status == 'success') {
                        alert(data.msg)
                        // debugger
                        // var oid = $('.oid').val();
                        // if (oid && oid != '') {
                        //     location.href = '/confirmOrder?oid=' + oid.trim();
                        // }
                        // else {
                        location.href = '/training'
                        // }
                    } else if (data.msg) {
                        alert(data.msg)
                        // console.log(data.message);
                    }
                },
                error: function (data) {
                    console.log(data.status);
                }
            });
            $(".tc-box").hide();
        })
        $(document).on("click", ".zi-fdTel .up", function () {
            $("html,body").animate({ scrollTop: 0 });
        });
        $(window).scroll(function () {
            var st = $(document).scrollTop();
            var $top = $(".zi-fdTel");
            if (st > 400) {
                $top.css({ display: 'block' });
            } else {
                if ($top.is(":visible")) {
                    $top.hide();
                }
            }
        });

    });
