                            <div class="card-header">
                                <h3 class="card-title">
                                    修改订单
                                </h3>
                            </div>
                            <!-- /.card-header -->
                            <!-- form start -->
                            <form role="form">
                                <div class="card-body">
                                    <input class="oid" type="text" hidden value="<%=order.oid || '' %>">
                                    <div class="form-group">
                                        <label for="name">订单编号</label>
                                        <input value="<%=order.oid ? order.oid : '' %>" class="form-control oid" type="text"
                                            disabled>
                                    </div>

                                    <div class="form-group">
                                        <label for="name">下单时间</label>
                                        <input value="<%=order.inDate ? order.inDate.toISOString() : '' %>" class="form-control inDate"
                                            type="text" disabled>
                                    </div>

                                    <div class="form-group">
                                        <label for="name">订单金额</label>
                                        <input value="<%=order.totalAmoumt ? order.totalAmoumt : '' %>" class="form-control totalAmoumt"
                                            type="text" placeholder="例如：5000">
                                    </div>

                                    <div class="form-group">
                                        <label for="shippingCharge">运输方式</label>
                                        <select class="form-control shippingCharge">
                                            <%if(order.trackingInfo && order.trackingInfo.payInfo && order.trackingInfo.payInfo.shippingCharge && order.trackingInfo.payInfo.shippingCharge != ''){ %>
                                            <option>
                                                <%=order.trackingInfo.payInfo.shippingCharge %>
                                            </option>
                                            <%} %>
                                            <%if(shippingCharges && shippingCharges.length > 0){ shippingCharges.forEach(function(child, index){ %>
                                            <%if(child && order.trackingInfo && order.trackingInfo.payInfo && order.trackingInfo.payInfo.shippingCharge && order.trackingInfo.payInfo.shippingCharge != '' && child.trim() != order.trackingInfo.payInfo.shippingCharge.trim()){ %>
                                            <option>
                                                <%=child %>
                                            </option>
                                            <%} %>
                                            <%})} %>
                                        </select>
                                    </div>

                                    <div class="form-group">
                                        <label for="shippingChargeAmount">运费</label>
                                        <input value="<%=order.trackingInfo && order.trackingInfo.payInfo && order.trackingInfo.payInfo.shippingChargeAmount != undefined ? order.trackingInfo.payInfo.shippingChargeAmount : '' %>"
                                            class="form-control shippingChargeAmount" type="text" placeholder="例如：0">
                                    </div>

                                    <div class="form-group">
                                        <label for="status">订单状态</label>
                                        <select class="form-control status">
                                            <%if(statusType && statusType.value && statusType.value != ''){ %>
                                            <option data-target="<%=statusType.key %>">
                                                <%=statusType.value %>
                                            </option>
                                            <%} %>
                                            <%if(statusOptions && statusOptions.length > 0){ statusOptions.forEach(function(child, index){ %>
                                            <option data-target="<%=child.key %>">
                                                <%=child.value %>
                                            </option>
                                            <%})} %>
                                        </select>
                                    </div>
                                </div>
                                <!-- /.card-body -->

                                <div class="card-footer">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </form>
                        </div>
                        <!-- /.card -->

