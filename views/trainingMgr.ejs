    <script>
        $(function () {
            var ttid = $('input.ttid').val();
            var nttid = 'ttid_' + new Date().getTime();

            var contentEditor = null;

            ClassicEditor
                .create(document.querySelector('#content'), {
                    ckfinder: {
                        uploadUrl: '/api/uploadImages?command=content&ttid=' + ttid && ttid.trim() != '' ? ttid : nttid + '&type=Files&responseType=json'
                    }
                })
                .then(function (editor) {
                    contentEditor = editor;
                    // The editor instance
                })
                .catch(function (error) {
                    console.error(error)
                });

            $('.btn.btn-primary').click(function (e) {
                e.preventDefault();
                // debugger
                var data = new FormData();
                var content = contentEditor.getData();
                data.append("content", content);
                var title = $('input.title').val();
                data.append("title", title);
                // var content = $('input.content').val();
                // data.append("content", content);
                var address = $('input.address').val();
                data.append("address", address);
                var time = $('input.time').val();
                data.append("time", time);
                var ttid = $('input.ttid').val();
                data.append("ttid", ttid && ttid.trim() != '' ? ttid : nttid);


                if (document.getElementsByClassName('img')[0].files[0]) {
                    data.append("img", document.getElementsByClassName('img')[0].files[0])
                }

                $.ajax({
                    url: ttid && ttid.trim() != '' ? '/api/updateTraining?ttid=' + ttid.trim() : '/api/createTraining',
                    type: 'POST',
                    data: data,
                    async: false,
                    cache: false,
                    contentType: false,
                    processData: false,
                    success: function (data) {
                        console.log(data);
                        if (data.status && data.status === 'success') {
                            alert(data.msg)
                            location.href = '/management/trainingMgrM'
                        } else if (data.msg) {
                            alert(data.msg)
                            // console.log(data.message);
                        }
                    },
                    error: function (data) {
                        console.log(data.status);
                    }
                });
            })
        })
