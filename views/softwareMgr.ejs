                // var partsId = $('input.partsId').val();
                // var pName = $('input.pName').val();

                var propertyDom = $('.propertyDom');
                let propertys = [];
                for (let k = 0; k < propertyDom.length; k++) {
                    let property = $(propertyDom[k]).find('input');
                    let img = $(propertyDom[k]).find('.rar');
                    if (property && property.length >= 3) {
                        // propertys.push({
